{
    "connection": {
        "type": {
            "displayName": "Securonix API Connection",
            "group": "securonix_api"
        },
        "help": {
            "type": "link",
            "default": "https://securonix-documentation-link"
        },
        "options": {
            "index": {
            "type": "text",
            "optional": true
        }
        }
    },
    "configuration": {
        "auth": {
            "type": "fields",
            "username": {
                "type": "text"
            },
            "password": {
                "type": "password"
            },
            "base_url": {
                "type": "text",
                "description": "Base URL for Securonix API"
            }
        },
        "query": {
            "tenant_name": {
                "type": "text",
                "description": "Name of the tenant to search within"
            }
        }
    }
}
